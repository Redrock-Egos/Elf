<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="15dp">

    <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/riv_music_bg_piazza"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            app:riv_corner_radius="3dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:src="@drawable/ic_disk_src"
            />

    <android.support.design.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#ffffff"
            android:layout_marginEnd="5dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="8dp"
            app:cardMaxElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintBottom_toTopOf="@+id/guideline6"
            app:layout_constraintTop_toTopOf="@+id/guideline4">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/tv_song_pizza"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="#E6000000"
                    android:textSize="15sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginStart="10dp"
                    tools:text="Thunder"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/guideline5"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/ibtn_piazza_playing"
                    app:layout_constraintHorizontal_bias="0.09"/>

            <TextView
                    android:id="@+id/tv_singer_piazza"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:textColor="#A6000000"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="Imagine Dragons"
                    app:layout_constraintTop_toBottomOf="@+id/tv_song_pizza"
                    app:layout_constraintStart_toStartOf="@+id/tv_song_pizza"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/ibtn_piazza_playing"
                    app:layout_constraintHorizontal_bias="0.0"/>

            <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/riv_avatar"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:scaleType="centerCrop"
                    app:riv_corner_radius="3dp"
                    tools:src="@drawable/ic_disk_src"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_singer_piazza"
                    app:layout_constraintStart_toStartOf="@+id/tv_singer_piazza"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/comment"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    app:layout_constraintStart_toEndOf="@+id/riv_avatar"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="@+id/riv_avatar"
                    android:id="@+id/textView"/>

            <TextView
                    android:id="@+id/tv_time_piazza"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#A6000000"
                    android:textSize="11sp"
                    android:layout_marginTop="3dp"
                    tools:text="一小时前"
                    tools:ignore="SmallSp"
                    app:layout_constraintTop_toBottomOf="@+id/textView"
                    app:layout_constraintStart_toStartOf="@+id/textView"/>

            <ImageButton
                    android:id="@+id/ibtn_piazza_playing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_play_pause"
                    android:background="#00000000"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            <android.support.constraint.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/guideline5"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.1"/>


        </android.support.constraint.ConstraintLayout>


    </android.support.design.card.MaterialCardView>


    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline2"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.45"/>

    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline3"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.26"/>

    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline4"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1"/>

    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline6"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9"/>


</android.support.constraint.ConstraintLayout>